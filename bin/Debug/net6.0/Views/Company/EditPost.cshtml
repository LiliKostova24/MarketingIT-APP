@model MarketingIT.Models.EditPostViewModel

<h2>Edit Post</h2>

<form asp-action="EditPost" method="post" enctype="multipart/form-data">
  @Html.AntiForgeryToken()
  <input type="hidden" asp-for="Id" />

  <div class="mb-3">
    <label asp-for="Content" class="form-label"></label>
    <textarea asp-for="Content" class="form-control" rows="4"></textarea>
    <span asp-validation-for="Content" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label class="form-label">Current Image</label><br />
    @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
    {
      <img src="@Model.ExistingImageUrl"
           class="img-fluid mb-2"
           style="max-height:150px;" />
    }
    else
    {
      <p><em>No image uploaded.</em></p>
    }
  </div>

  <div class="mb-3">
    <label asp-for="Photo" class="form-label">Replace Image</label>
    <input asp-for="Photo" type="file" class="form-control" />
    <span asp-validation-for="Photo" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Save Changes</button>
  <a asp-action="Dashboard" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}

